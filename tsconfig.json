{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "sfmc-helper": ["./src/index.ts"],
      "sfmc-helper/*": ["./src/*"]
    }
  },
  
  "include": ["src/**/*.ts", "src/types.ts"],
  "exclude": ["node_modules", "dist", "tests", "example"]
}
